{# @var mixed[] peopleOptions #}

{% extends 'Http/_Infrastructure/_LayoutCms.twig' %}

{% block cmsContent %}
    {% include 'Http/CMS/_Infrastructure/Forms/_LabelsOnLeftForm.twig' with {
        submitContent: 'Create',
        cancelAction: '/cms/shows',
        inputs: [
            {
                label: 'Title',
                subLabel: "The show's name. Obviously should be unique",
                name: 'title',
            },
            {
                label: 'Slug',
                subLabel: 'Must be unique to the show',
                name: 'slug',
            },
            {
                label: 'Show Art',
                subLabel: 'Should be an optimized JPG, 1400px square',
                name: 'artwork',
                type: 'file_upload',
                description: 'Should be an optimized JPG, 1400px square',
            },
            {
                label: 'Description',
                subLabel: 'A short description of the show',
                name: 'description',
                type: 'textarea',
            },
            {
                label: 'Show Status',
                name: 'status',
                type: 'radio',
                options: [
                    {
                        label: 'Live',
                        value: 'live',
                    },
                    {
                        label: 'Coming Soon',
                        value: 'coming_soon',
                    },
                    {
                        label: 'Hidden',
                        value: 'hidden',
                    },
                    {
                        label: 'Retired',
                        value: 'retired',
                    },
                ],
            },
            {
                label: 'Explicit?',
                name: 'explicit',
                type: 'lightswitch',
            },
            {
                label: 'iTunes Link',
                name: 'itunes_link',
            },
            {
                label: 'Google Play Link',
                name: 'google_play_link',
            },
            {
                label: 'Stitcher Link',
                name: 'stitcher_link',
            },
            {
                label: 'Spotify Link',
                name: 'spotify_link',
            },
            {
                label: 'Keywords',
                subLabel: 'A short description of the show',
                name: 'keywords',
                type: 'textarea',
            },
            {
                label: 'Hosts',
                name: 'hosts',
                type: 'select',
                multiple: true,
                options: peopleOptions,
            },
        ],
    } only %}
{% endblock %}

