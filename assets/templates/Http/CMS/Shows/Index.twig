{# @var \App\Context\Shows\Models\ShowModel shows #}

{% extends 'Http/_Infrastructure/_LayoutCms.twig' %}

{% set actionButton %}
    {% include 'Http/CMS/_Infrastructure/Includes/PageActionButton.twig' with {
        content: 'New Show',
        href: '/cms/shows/new',
    } only %}
{% endset %}

{% block cmsContent %}
    <div class="mb-4 text-right">
        {{ actionButton }}
    </div>
    <div>
        <div class="flex flex-col">
            <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
                <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
                    <table class="min-w-full divide-y divide-gray-200">
                        <thead>
                        <tr>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                Title
                            </th>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                                status
                            </th>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50"></th>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50"></th>
                            <th class="px-6 py-3 border-b border-gray-200 bg-gray-50"></th>
                        </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200">
                        {% for show in shows %}
                            <tr>
                                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                                    <a href="/cms/shows/episodes/{{ show.id }}" class="block flex items-center">
                                        <div class="flex-shrink-0 h-10 w-10">
                                            <img
                                                class="h-10 w-10"
                                                src="{{ getShowArtworkUrl(show, {
                                                    size: 80,
                                                }) }}"
                                                alt=""
                                            >
                                        </div>
                                        <div class="ml-4">
                                            <div class="text-sm leading-5 font-medium text-gray-900">
                                                {{ show.title|smartypants|widont }}
                                            </div>
                                            <div class="text-sm leading-5 text-gray-500">
                                                {{ show.slug }}
                                            </div>
                                        </div>
                                    </a>
                                </td>
                                <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                                    <div class="text-sm leading-5 text-gray-900">
                                        {{ show.humanReadableStatus }}
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-200 text-sm leading-5 font-medium">
                                    <a href="/cms/shows/episodes/{{ show.id }}" class="text-indigo-600 hover:text-indigo-900">Episodes</a>
                                </td>
                                <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-200 text-sm leading-5 font-medium">
                                    <a href="/{{ show.slug }}" class="text-indigo-600 hover:text-indigo-900">View Page</a>
                                </td>
                                <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-200 text-sm leading-5 font-medium">
                                    <a href="/cms/shows/edit/{{ show.id }}" class="text-indigo-600 hover:text-indigo-900">Edit</a>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <div class="mt-4 text-right">
        {{ actionButton }}
    </div>
{% endblock %}
