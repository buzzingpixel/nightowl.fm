{# @var \App\Http\Models\Pagination pagination #}

{% if pagination.totalPages > 1 %}
    <div class="flex items-center justify-between mt-4">
        <div class="flex-1 flex justify-between sm:hidden">
            {% if pagination.prevPageLink %}
                <a
                    href="{{ pagination.prevPageLink }}"
                    class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150"
                >
                    Previous
                </a>
            {% endif %}
            {% if pagination.nextPageLink %}
                <a
                    href="{{ pagination.nextPageLink }}"
                    class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm leading-5 font-medium rounded-md text-gray-700 bg-white hover:text-gray-500 focus:outline-none focus:shadow-outline-blue focus:border-blue-300 active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150"
                >
                    Next
                </a>
            {% endif %}
        </div>
        <div class="hidden sm:flex-1 sm:flex sm:items-center sm:justify-between">
            <div class="mr-2">
                <p class="text-sm leading-5 text-gray-700">
                    Showing page
                    <span class="font-medium">{{ pagination.currentPage }}</span>
                    of
                    <span class="font-medium">{{ pagination.totalPages }}</span>
                </p>
            </div>
            <div>
                <nav class="relative z-0 shadow-sm">
                    <div class="inline-flex border-r border-t border-b border-gray-300 border-separate rounded-md overflow-hidden">
                        {% if pagination.firstPageLink %}
                            <a
                                href="{{ pagination.firstPageLink }}"
                                class="relative inline-flex items-center px-2 py-2 bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150 border-l border-gray-300"
                                aria-label="Previous"
                            >
                                <svg class="h-5 w-5 -mr-4" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </a>
                        {% endif %}
                        {% if pagination.prevPageLink %}
                            <a
                                href="{{ pagination.prevPageLink }}"
                                class="relative inline-flex items-center px-2 py-2 bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150 border-l border-gray-300"
                                aria-label="Previous"
                            >
                                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </a>
                        {% endif %}
                        {% for page in pagination.pagesArray %}
                            {% if page.isActive %}
                                <span class="relative inline-flex items-center px-4 py-2 bg-white text-sm leading-5 font-medium text-gray-400 border-l border-gray-300">
                                    {{ page.label }}
                                </span>
                            {% else %}
                                <a
                                    href="{{ page.target }}"
                                    class="relative inline-flex items-center px-4 py-2 bg-white text-sm leading-5 font-medium text-gray-700 hover:text-gray-500 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-700 transition ease-in-out duration-150 border-l border-gray-300"
                                >
                                    {{ page.label }}
                                </a>
                            {% endif %}
                        {% endfor %}
                        {% if pagination.nextPageLink %}
                            <a
                                href="{{ pagination.nextPageLink }}"
                                class="relative inline-flex items-center px-2 py-2 bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150 border-l border-gray-300"
                                aria-label="Next"
                            >
                                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </a>
                        {% endif %}
                        {% if pagination.lastPageLink %}
                            <a
                                href="{{ pagination.lastPageLink }}"
                                class="relative inline-flex items-center px-2 py-2 bg-white text-sm leading-5 font-medium text-gray-500 hover:text-gray-400 focus:z-10 focus:outline-none focus:border-blue-300 focus:shadow-outline-blue active:bg-gray-100 active:text-gray-500 transition ease-in-out duration-150 border-l border-gray-300"
                                aria-label="Next"
                            >
                                <svg class="h-5 w-5 -mr-4" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                                </svg>
                                <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
                                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                                </svg>
                            </a>
                        {% endif %}
                    </div>
                </nav>
            </div>
        </div>
    </div>
{% endif %}
