{% if breadcrumbs|length > 0 %}
    {% if includeHome %}
        {% set breadcrumbs = [{
            href: '/',
            content: 'Home',
        }]|merge(breadcrumbs) %}
    {% endif %}

    <div class="mb-2">
        <nav class="sm:hidden">
            <a
                href="{{ breadcrumbs|last.href }}"
                class="flex items-center text-sm leading-5 font-medium text-gray-500 dark:text-gray-100 hover:text-gray-700 dark:hover:text-gray-300 transition duration-150 ease-in-out"
            >
                <svg class="flex-shrink-0 -ml-1 mr-1 h-5 w-5 text-gray-400 dark:text-gray-200" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M12.707 5.293a1 1 0 010 1.414L9.414 10l3.293 3.293a1 1 0 01-1.414 1.414l-4-4a1 1 0 010-1.414l4-4a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                {{ breadcrumbs|last.content }}
            </a>
        </nav>
        <nav class="hidden sm:flex items-center text-sm leading-5 font-medium">
            {% for crumb in breadcrumbs %}
                <a
                    href="{{ crumb.href }}"
                    class="text-gray-500 dark:text-gray-100 hover:text-gray-700 dark:hover:text-gray-300 transition duration-150 ease-in-out"
                >
                    {{ crumb.content|smartypants|widont }}
                </a>
                <svg class="flex-shrink-0 mx-2 h-5 w-5 text-gray-400 dark:text-gray-200" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"/>
                </svg>
            {% endfor %}
        </nav>
    </div>
{% endif %}
